<h1>Drivers#new</h1>


<%= form_for @driver do |f| %>
	<div>
		<%= f.label :first_name %><br>
		<%= f.text_field :first_name %>
	</div>

	<div>
		<%= f.label :last_name %><br>
		<%= f.text_field :last_name %><br>
	</div>


		<%= f.fields_for :license do |license_builder| %>
			<div>
				<%= license_builder.label :number, 'Driver s License' %><br>
				<%= license_builder.text_field :number %>

			</div>
			<div>
				<%= license_builder.label :state %><br>
				<%= license_builder.text_field :state %>

			</div>
		<% end %>

	<%= f.submit %>

<% end %>

<%= link_to 'Cancel', drivers_path %>



